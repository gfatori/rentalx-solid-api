  "paths": {
    "/categories": {
      "post": {
        "tags": [
          "categories"
        ],
        "summary": "Create a new category",
        "description": "Create a new category",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "C.Example",
                  "description": "Category example"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Category created"
          },
        "500": {
          "description": "Internal server error"
          }
        }
      },
      "get": {
        "tags": ["Category"],
        "summary": "Get all categories",
        "description": "Get all categories",
        "responses": {
          "200": {
            "description": "Categories retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type":"string"
                      },
                      "description": {
                        "type":"string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}